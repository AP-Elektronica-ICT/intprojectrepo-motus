<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileInfo">

    <TextView
        android:id="@+id/text_username"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Profile_Picture"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="48dp"
        android:text="@string/text_username" />

    <TextView
        android:id="@+id/text_input_username"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Profile_Picture"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/text_username"
        android:layout_toRightOf="@+id/text_username"
        android:background="@drawable/blackborder"
        android:text="TextView" />

    <Button
        android:id="@+id/button_edit_username"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/Profile_Picture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_toEndOf="@+id/text_input_username"
        android:layout_toRightOf="@+id/text_input_username" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_username"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="48dp"
        android:text="@string/text_email" />


    <TextView
        android:id="@+id/text_input_email"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_username"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/text_email"
        android:layout_toRightOf="@+id/text_email"
        android:background="@drawable/blackborder"
        android:text="TextView" />


    <Button
        android:id="@+id/button_edit_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/button_edit_username"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_toEndOf="@+id/text_input_email"
        android:layout_toRightOf="@+id/text_input_email" />


    <Button
        android:id="@+id/button_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_email"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="70dp"
        android:text="@string/button_text_change_password" />

    <ImageView
        android:id="@+id/Profile_Picture"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars[2]" />

</RelativeLayout>